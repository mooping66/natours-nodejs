// HEADER
//- <header class="header">
header.header
    //- <nav class="nav nav--tours">
    nav.nav.nav--tours
        //- <a href="#" class="nav__el">All tours</a>
        a.nav__el(href='/') All tours
    //- <div class="header__logo">
    .header__logo
        //- <img src="img/logo-white.png" alt="Natours logo" />
        img(src='img/logo-white.png' alt='Natours logo')
    //- <nav class="nav nav--user">
    nav.nav.nav--user
        if user
            //- a.nav__el(href='#') My bookings
            a.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                //- <img src="img/user.jpg" alt="User photo" class="nav__user-img" />
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                //- <span>Mooping</span>
                span= user.name.split(' ')[0]
        else 
            //- <button class="nav__el">Log in</button>
            //- button.nav.nav__el Log in
            a.nav__el(href='/login') Log in
            //- <button class="nav__el nav__el--cta">Sign up</button>
            //- button.nav.nav__el nav__el--cta Sign up
            a.nav__el.nav__el--cta(href='#') Sign up